{
  "name": "Dominion_kor",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Dominion - English to Korean program",

  "web_accessible_resources": [
    "util.js",
    "main.js",
    "base.js",
    "intrigue.js",
    "seaside.js",
    "prosperity.js",
    "empires.js",
    "cornucorpia.js",
    "hinterland.js",
    "darkages.js",
    "guilds.js",
    "adventure.js",
    "alchemy.js",
    "promo.js",
    "nocturne.js",
    "renaissance.js",
    "menagerie.js",

    "card_down.mp3",
    "card_get.mp3",
    "treasure_down.mp3"

  ],

  "content_scripts": [
    {
      "matches": ["https://dominion.games/*"],
      "js": ["translate_main.js", "play_sound.js"]
    }
  ],
  
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "도미니언 온라인 한글화"
  }
}