{
  "name": "Dominion_kor",
  "version": "0.0.6",
  "manifest_version": 2,
  "description": "Dominion - English to Korean program",
  "background": {
    "scripts": [  
      "base.js",    
      "intrigue.js",
      "seaside.js",
      "prosperity.js",
      "empires.js",
      "cornucorpia.js",
      "hinterland.js",
      "darkages.js",
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Translate!"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs",
	"storage"
  ]
}